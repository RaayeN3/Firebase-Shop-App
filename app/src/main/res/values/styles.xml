<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@color/color_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/btn_padding</item>
        <item name="android:paddingBottom">@dimen/btn_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/btn_textSize</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">280dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="TabLayoutColor">
        <item name="android:background">@color/color_primary_dark</item>
        <item name="tabIconTint">@color/mtrl_tabs_icon_color_selector_colored</item>
        <item name="tabIndicatorColor">?attr/colorOnPrimary</item>
        <item name="tabTextColor">@color/mtrl_tabs_icon_color_selector_colored</item>
        <item name="tabRippleColor">@color/mtrl_tabs_colored_ripple_color</item>
    </style>

    <style name="ArrowBackStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_4sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:background">@drawable/ic_arrow_back</item>
    </style>

    <style name="TitleCategoryNameStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="BtnIncreaseDecrease">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:background">@drawable/ic_add</item>
        <item name="android:backgroundTint">@color/color_primary</item>
    </style>
</resources>